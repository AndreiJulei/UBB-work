<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainWindowController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label text="Number of PrgStates:" />
                  <TextField fx:id="nrPrgStatesField" editable="false" />
               </children>
            </HBox>

            <GridPane hgap="10.0" vgap="10.0" VBox.vgrow="ALWAYS">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                     <children>
                        <Label text="Heap Table" />
                        <TableView fx:id="heapTable">
                          <columns>
                            <TableColumn fx:id="heapAddrColumn" text="Address" />
                            <TableColumn fx:id="heapValueColumn" text="Value" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>

                  <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                     <children>
                        <Label text="Output" />
                        <ListView fx:id="outList" />
                     </children>
                  </VBox>

                  <VBox GridPane.columnIndex="0" GridPane.rowIndex="1">
                     <children>
                        <Label text="File Table" />
                        <ListView fx:id="fileList" />
                     </children>
                  </VBox>

                  <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Label text="PrgState Identifiers" />
                        <ListView fx:id="prgStateIdList" />
                     </children>
                  </VBox>

                  <VBox GridPane.columnIndex="0" GridPane.rowIndex="2">
                     <children>
                        <Label text="Symbol Table" />
                        <TableView fx:id="symTable">
                          <columns>
                            <TableColumn fx:id="symVarColumn" text="Variable" />
                            <TableColumn fx:id="symValueColumn" text="Value" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>

                  <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <children>
                        <Label text="Execution Stack" />
                        <ListView fx:id="exeStackList" />
                     </children>
                  </VBox>
               </children>
            </GridPane>

            <Button fx:id="runOneStepButton" mnemonicParsing="false" onAction="#handleRunOneStep" text="Run One Step" />
         </children>
      </VBox>
   </children>
</AnchorPane>