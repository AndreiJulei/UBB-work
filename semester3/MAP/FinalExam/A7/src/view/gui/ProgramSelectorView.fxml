      alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.gui.ProgramSelectorController">

    <Label text="Select a Program to Execute" />

    <ListView fx:id="programListView"
              prefWidth="600"
              prefHeight="400" />

    <Label text="Double-click a program to run it" />

</VBox>
